	end
	
	
	return spr_ind
	
end

function is_splat(x,y)

	local t_x = 
		((x - (x % 8)) / 8)
	local t_y = 
		((y - (y % 8)) / 8)
		
		
	s_s = {1,2,3,4,5,6,18,34,
		17,33,49,50,3,19,35,51,20,36,
		52,16,32,48}
		
		
	for i=1,#s_s do
		if mget(t_x,t_y) == s_s[i] 
			then
			return true
		end
	end
	return false
 
end


function is_wall(x,y)

	local t_x = 
		((x - (x % 8)) / 8)
	local t_y = 
		((y - (y % 8)) / 8)

 if mget(t_x,t_y) ==7 or
 	mget(t_x,t_y) == 23 then
 	return true
 else
 	return false
 end
 
end

function add_splat(x,y,si,c,f)

	if is_splat(x,y)==false then
	
 	local s = {}
 	s.x=x
 	s.y=y
 	s.s=si
 	s.c=c
 	s.f=f
 	
 	splats[#splats+1] = s
 	splat(s)
 	t_flow-=1
	end
	
	
	
end

function get_splat(x,y)

	local s = "null"
	
	for i=1,#splats do
	
			local spl = splats[i]
			
			if spl.x == x
				and spl.y == y then
				
				s = spl
				
		 end
	end
	
	return s

end


