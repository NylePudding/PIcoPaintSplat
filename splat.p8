--player
function draw_player()
	spr(25, player.x,player.y)
end

function player_movement()

	if player.x == player.x_m
			or player.y == player.y_m 
			then
 	if btnp(0) then
 		try_move(player.x-8,player.y)
 	end
 	if btnp(1) then
 		try_move(player.x+8,player.y)
 	end
 	if btnp(2) then
 		try_move(player.x,player.y-8)
 	end
 	if btnp(3) then
 		try_move(player.x,player.y+8)
 	end
	end

	if player.x != player.x_m
			or player.y != player.y_m 
			then
			
		
		
		local timer=(time()-player.t_s )
			/0.2%1
		
		player.x = lerp(player.x,
			player.x_m,ease_out(timer))
			
		player.y = lerp(player.y,
			player.y_m,ease_out(timer))
	end

end

function try_move(x,y)

	if is_wall(x,y)==false then
		player.x_m=x
		player.y_m=y
		player.m=true
		player.t_s=time()
		return true
	else
		break_wall(x,y)
		return false
	end
	

end

function break_wall(x,y)

	local b_x = 
		((x - (x % 8)) / 8)
	local b_y = 
		((y - (y % 8)) / 8)
		
		if (mget(b_x,b_y) == 7) then
			mset(b_x,b_y,23)
		else 
			mset(b_x,b_y,0)
		end

end

function lerp(a,b,t)

	if b<a then
		return flr(a + (b-a)*t)
	else 
		return ceil(a + (b-a)*t)
	end
end

function ease_out(t)
	return 1-(1-t)^2
end

