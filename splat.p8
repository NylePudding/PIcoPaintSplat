	end
	if is_wall(x,y-8)==true then
		w_top = true
	end
	if is_wall(x-8,y)==true then
		w_left = true
	end
	if is_wall(x+8,y)==true then
		w_right = true
	end
	
	
	
	if top == true 
		and bot == true 
